<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="15" maxWidth="300" style="-fx-padding: 20; -fx-background-color: #f5f5f5; -fx-background-radius: 10;" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.crossword.client.LoginController">
    <Label text="Game Ô chữ" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
    <Label text="Đăng Nhập" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
    <TextField fx:id="txtUsername" promptText="Tên đăng nhập" style="-fx-pref-width: 250; -fx-background-radius: 5;"/>
    <PasswordField fx:id="txtPassword" promptText="Mật khẩu" style="-fx-pref-width: 250; -fx-background-radius: 5;"/>
    <Button text="Đăng Nhập" onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5; -fx-padding: 8 20;"/>
    <Button text="Đăng ký" onAction="#handleRegisterRedirect"
            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5; -fx-padding: 8 20;"/>
    <Label fx:id="lblStatus" textFill="red" style="-fx-font-size: 12px;"/>
</VBox>